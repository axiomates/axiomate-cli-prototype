{
	"name": "axiomate",
	"version": "0.2.0",
	"private": true,
	"bin": {
		"axiomate": "dist/cli.js",
		"axiomate-mcp": "dist/mcp-server.js"
	},
	"type": "module",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"prebuild": "jiti scripts/gen-meta.ts",
		"build": "tsc",
		"predev": "jiti scripts/gen-meta.ts",
		"dev": "tsc --watch",
		"start": "node dist/cli.js",
		"mcp": "node dist/mcp-server.js",
		"prebundle": "jiti scripts/gen-meta.ts",
		"bundle": "jiti scripts/bundle.ts",
		"package": "jiti scripts/package.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint . && prettier --check .",
		"lint:fix": "eslint --fix . && prettier --write .",
		"coverage": "npm test -- --coverage"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"@modelcontextprotocol/sdk": "^1.25.1",
		"chardet": "^2.1.1",
		"iconv-lite": "^0.7.1",
		"ink": "^6.0.0",
		"marked": "^15.0.12",
		"marked-terminal": "^7.3.0",
		"meow": "^13.2.0",
		"react": "^19.0.0",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@types/chardet": "^0.8.3",
		"@types/node": "^25.0.1",
		"@types/react": "^19.0.1",
		"@vitest/coverage-istanbul": "^2.1.9",
		"@vitest/coverage-v8": "^2.1.9",
		"esbuild": "^0.27.1",
		"eslint": "^9.17.0",
		"eslint-plugin-react": "^7.37.2",
		"eslint-plugin-react-hooks": "^5.1.0",
		"globals": "^15.13.0",
		"ink-testing-library": "^4.0.0",
		"jiti": "^2.6.1",
		"prettier": "^3.4.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.0",
		"vitest": "^2.1.8"
	}
}
